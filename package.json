{
  "name": "stock-screener",
  "version": "1.0.0",
  "private": true,
  "description": "Application d'aide à la décision boursière 100% locale avec scraping robuste des actions européennes",
  "author": "Stock Screener Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.23.0",
  "scripts": {
    "postinstall": "pnpm playwright:install || true",
    "playwright:install": "cd packages/scraper && pnpm exec playwright install chromium --with-deps",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "pnpm --filter @stock-screener/web start",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:unit": "turbo run test:unit",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "setup": "bash scripts/setup.sh",
    "db:generate-types": "pnpm --filter @stock-screener/database generate-types",
    "db:test": "tsx scripts/test-supabase.ts",
    "quality:check": "bash scripts/check-quality.sh"
  },
  "devDependencies": {
    "@supabase/supabase-js": "2.45.4",
    "@types/node": "^22.10.0",
    "dotenv": "^16.6.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "tsx": "^4.20.6",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
