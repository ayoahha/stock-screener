{
  "name": "stock-screener",
  "version": "1.0.0",
  "private": true,
  "description": "Application d'aide à la décision boursière 100% locale avec scraping robuste des actions européennes",
  "author": "Stock Screener Team",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "postinstall": "pnpm playwright:install || true",
    "playwright:install": "cd packages/scraper && pnpm exec playwright install chromium --with-deps",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "pnpm --filter @stock-screener/web start",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:unit": "turbo run test:unit",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "setup": "bash scripts/setup.sh",
    "db:generate-types": "pnpm --filter @stock-screener/database generate-types",
    "db:test": "tsx scripts/db-test.ts",
    "db:setup": "bash scripts/db-setup.sh",
    "db:start": "docker compose up -d postgres",
    "db:stop": "docker compose down",
    "db:logs": "docker compose logs -f postgres",
    "db:reset": "docker compose down -v && docker compose up -d postgres",
    "db:admin": "docker compose --profile admin up -d",
    "quality:check": "bash scripts/check-quality.sh"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.49.1",
    "@types/node": "^24.0.0",
    "dotenv": "^16.6.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tsx": "^4.21.0",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
