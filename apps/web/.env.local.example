# Stock Screener - Local Development Environment
# Copy this file to .env.local

# ========================================
# Database Configuration
# ========================================
# Choose ONE of the following backends:

# OPTION 1: Local PostgreSQL (Docker) - RECOMMENDED
# Start the database with: docker compose up -d
DATABASE_URL=postgresql://stockscreener:stockscreener@localhost:5432/stockscreener

# OPTION 2: Supabase (Cloud)
# Uncomment and fill these to use Supabase instead
# Project URL from Supabase Dashboard > Settings > API
# NEXT_PUBLIC_SUPABASE_URL=https://ofudbmnwpaelgvoufbln.supabase.co
# Anonymous key (public) - safe for client-side use
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
# Service role key (secret) - server-side only!
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ========================================
# Financial Data APIs (Fallback)
# ========================================
# Financial Modeling Prep API (optional, free: 250 calls/day)
# https://site.financialmodelingprep.com/developer/docs
FMP_API_KEY=your-fmp-api-key-optional

# Polygon.io API (optional, free: 5 calls/minute)
# https://polygon.io/
POLYGON_API_KEY=your-polygon-api-key-optional

# ========================================
# AI Features (OpenRouter)
# ========================================
# OpenRouter API Key (REQUIRED for AI fallback)
# Get your key at: https://openrouter.ai
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxx

# AI Model Configuration - OpenRouter model IDs
# Check available models: https://openrouter.ai/models
# Examples:
# - DeepSeek Chat (economical): deepseek/deepseek-chat
# - DeepSeek V3 (performant): deepseek/deepseek-v3
# - Kimi K2 Thinking: moonshot/kimi-k2-thinking
AI_PRIMARY_MODEL=deepseek/deepseek-chat
AI_FALLBACK_MODEL=deepseek/deepseek-v3

# AI Feature Flags
ENABLE_AI_FALLBACK=true
ENABLE_AI_ANALYSIS=true

# AI Budget Limits (USD)
AI_MAX_MONTHLY_BUDGET=5.00
AI_MAX_DAILY_BUDGET=0.50
AI_MAX_COST_PER_CALL=0.01

# AI Validation - confidence threshold (0.00-1.00)
AI_CONFIDENCE_THRESHOLD=0.80

# ========================================
# Scraping Configuration
# ========================================
# Playwright headless mode (true for production, false for debug)
PLAYWRIGHT_HEADLESS=true

# Cache TTL in seconds (86400 = 24h)
CACHE_TTL=86400

# ========================================
# Development
# ========================================
NODE_ENV=development
