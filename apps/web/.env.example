# Stock Screener Web App - Environment Configuration
# Copy this file to .env.local

# ========================================
# Database Configuration
# ========================================
# Choose ONE of the following backends:

# OPTION 1: Local PostgreSQL (Docker) - RECOMMENDED for local development
DATABASE_URL=postgresql://stockscreener:stockscreener@localhost:5432/stockscreener

# OPTION 2: Supabase (Cloud)
# NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=xxxxx
# SUPABASE_SERVICE_ROLE_KEY=xxxxx

# ========================================
# Financial Data APIs (Optional)
# ========================================
# Financial Modeling Prep API - Free tier: 250 calls/day
# Get key at: https://financialmodelingprep.com/developer/docs/
FMP_API_KEY=xxxxx

# ========================================
# AI Features (OpenRouter)
# ========================================
# OpenRouter API Key - Get at: https://openrouter.ai
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxx

# AI Model Configuration
AI_PRIMARY_MODEL=deepseek/deepseek-chat
AI_FALLBACK_MODEL=deepseek/deepseek-v3

# AI Feature Flags
ENABLE_AI_FALLBACK=true
ENABLE_AI_ANALYSIS=true

# AI Budget Limits (USD)
AI_MAX_MONTHLY_BUDGET=5.00
AI_MAX_DAILY_BUDGET=0.50
AI_MAX_COST_PER_CALL=0.01
AI_CONFIDENCE_THRESHOLD=0.80
